<script>
  // ====== ë¬¸ì œ(5ê°œ) ======
  // key: mask | n95 | gown_glove | none
  const QUESTIONS = [
    { text: "ì¸í”Œë£¨ì—”ì í™˜ì êµ¬ì—­ ì²­ì†Œ", answer: "mask" },
    { text: "ê²°í•µ ì˜ì‹¬í™˜ì ë³‘ì‹¤ ì²­ì†Œ", answer: "n95" },
    { text: "í˜ˆì•¡/ì²´ì•¡ ì˜¤ì—¼ë¬¼ ì²˜ë¦¬(ìŠ¤í•„)", answer: "gown_glove" },
    { text: "VRE/CRE ì¥ê¸° ì¬ì‹¤ ë³‘ì‹¤ í‡´ì‹¤ í›„ í™˜ê²½ì •ë¦¬", answer: "gown_glove" },
    { text: "ì¼ë°˜ ë³µë„ ì²­ì†Œ", answer: "none" },
  ];

  // ====== ì„¤ì • ======
  const FALL_DURATION_MS = 5200;  // ë‚´ë ¤ì˜¤ëŠ” ì „ì²´ ì‹œê°„(5.2ì´ˆ)
  const FEEDBACK_MS = 550;        // ì •/ì˜¤ë‹µ ì´ë¯¸ì§€ í‘œì‹œ ì‹œê°„
  const NEXT_DELAY_MS = 250;      // ë‹¤ìŒ ë¬¸ì œ ì‹œì‘ ë”œë ˆì´
  const START_Y = -90;            // ì‹œì‘ ìœ„ì¹˜
  let endY = 0;                   // ê²Œì„ ì˜ì—­ ë†’ì´ì— ë”°ë¼ ê³„ì‚°

  // ====== ìƒíƒœ ======
  let idx = 0;
  let score = 0;
  let running = false;
  let locked = false;
  let rafId = null;
  let startTime = 0;

  // ====== DOM ======
  const qNowEl = document.getElementById("qNow");
  const qTotalEl = document.getElementById("qTotal");
  const scoreEl = document.getElementById("score");
  const fallBox = document.getElementById("fallBox");
  const fallText = document.getElementById("fallText");
  const fallTimer = document.getElementById("fallTimer");
  const game = document.getElementById("game");
  const grid = document.getElementById("grid");
  const restartBtn = document.getElementById("restart");
  const fb = document.getElementById("fb");
  const fbImg = document.getElementById("fbImg");

  qTotalEl.textContent = QUESTIONS.length;

  function calcEndY(){
    // game ì•ˆì—ì„œ fallBoxê°€ "ë°”ë‹¥ ê°€ê¹Œì´" ì˜¬ ë•Œê¹Œì§€ ë‚´ë ¤ì˜¤ê²Œ
    const gh = game.clientHeight;
    // ë°•ìŠ¤ ë†’ì´ ê³ ë ¤í•´ì„œ ì•½ê°„ ìœ„ì—ì„œ ë©ˆì¶”ê²Œ
    endY = gh - 120;
  }

  window.addEventListener("resize", () => {
    calcEndY();
  });

  function setFeedback(type){
    // type: "idle" | "correct" | "wrong"
    fbImg.src = `assets/${type}.png`;
    fb.classList.add("show");
    setTimeout(()=> fb.classList.remove("show"), FEEDBACK_MS);
  }

  function clearOptionStates(){
    [...grid.querySelectorAll(".opt")].forEach(el=>{
      el.classList.remove("correct","wrong");
    });
  }

  function setHeader(){
    qNowEl.textContent = (idx + 1);
    scoreEl.textContent = score;
  }

  function setQuestion(){
    const q = QUESTIONS[idx];
    fallText.textContent = q.text;
    fallTimer.textContent = "ë‚¨ì€ì‹œê°„ 5.0s";
  }

  function stopFall(){
    if (rafId) cancelAnimationFrame(rafId);
    rafId = null;
    running = false;
  }

  function startFall(){
    calcEndY();
    setHeader();
    setQuestion();
    clearOptionStates();
    locked = false;
    running = true;
    startTime = performance.now();

    // ìœ„ì¹˜ ì´ˆê¸°í™”
    fallBox.style.top = START_Y + "px";

    const step = (t) => {
      if (!running) return;

      const elapsed = t - startTime;
      const p = Math.min(elapsed / FALL_DURATION_MS, 1);
      const y = START_Y + (endY - START_Y) * p;

      fallBox.style.top = y + "px";

      // íƒ€ì´ë¨¸ í‘œì‹œ
      const remain = Math.max(0, (FALL_DURATION_MS - elapsed) / 1000);
      fallTimer.textContent = `ë‚¨ì€ì‹œê°„ ${remain.toFixed(1)}s`;

      if (p >= 1){
        // ì‹œê°„ ì´ˆê³¼ = ì˜¤ë‹µ ì²˜ë¦¬
        locked = true;
        setFeedback("wrong");
        goNext(false);
        return;
      }

      rafId = requestAnimationFrame(step);
    };

    rafId = requestAnimationFrame(step);
  }

  function goNext(wasCorrect){
    stopFall();

    // ì ê¹ ëŒ€ê¸° í›„ ë‹¤ìŒ ë¬¸ì œ
    setTimeout(() => {
      idx++;
      if (idx >= QUESTIONS.length){
        // ë
        showFinish();
      }else{
        startFall();
      }
    }, NEXT_DELAY_MS);
  }

  function showFinish(){
    // ë§ˆì§€ë§‰ ê²°ê³¼ í™”ë©´(ì§ˆë³‘ ë°•ìŠ¤ë¥¼ ì¤‘ì•™ ê³ ì •)
    calcEndY();
    running = false;
    locked = true;

    fallBox.style.top = (game.clientHeight/2 - 70) + "px";
    fallText.textContent = "ë! ìˆ˜ê³ í•˜ì…¨ìŠµë‹ˆë‹¤ ğŸ‘";
    fallTimer.textContent = `ìµœì¢… ì ìˆ˜: ${score} / ${QUESTIONS.length}`;
    setFeedback("idle");
  }

  function answerPick(key, el){
    if (locked || !running) return;
    locked = true;

    const q = QUESTIONS[idx];
    const correct = (key === q.answer);

    if (correct){
      score++;
      el.classList.add("correct");
      setFeedback("correct");
    }else{
      el.classList.add("wrong");
      setFeedback("wrong");
    }

    setHeader();
    setTimeout(()=> goNext(correct), FEEDBACK_MS);
  }

  grid.addEventListener("click", (e) => {
    const opt = e.target.closest(".opt");
    if (!opt) return;
    answerPick(opt.dataset.key, opt);
  });

  restartBtn.addEventListener("click", () => {
    // ì²˜ìŒë¶€í„°
    stopFall();
    idx = 0;
    score = 0;
    setFeedback("idle");
    startFall();
  });

  // ì‹œì‘
  setFeedback("idle");
  startFall();
</script>
</body>
